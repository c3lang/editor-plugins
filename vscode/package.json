{
    "name": "vscode-c3",
    "displayName": "C3",
    "description": "C3 Language Support for VSCode (Syntax Highlighting and LSP)",
    "publisher": "carl",
    "repository": "https://github.com/c3lang/editor-plugins.git",
    "version": "0.0.3",
    "author": {
        "name": "C3 community",
        "email": ""
    },
    "engines": {
        "vscode": "^1.75.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "icon": "images/icon.png",
    "license": "None",
    "contributes": {
        "languages": [
            {
                "id": "c3",
                "aliases": [
                    "C3",
                    "c3"
                ],
                "extensions": [
                    "c3",
                    "c3i"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "c3",
                "scopeName": "source.c3",
                "path": "./syntaxes/c3.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "c3",
                "path": "./snippets/snippets.json"
            }
        ],
        "configuration": {
            "title": "Language Server",
            "properties": {
                "c3.lsp.enable": {
                    "type": "boolean",
                    "default": false,
                    "description": "Enables the language server"
                },
                "c3.lsp.path": {
                    "type": "string",
                    "default": "c3-lsp",
                    "markdownDescription": "The path to **c3-lsp** binary"
                },
                "c3.lsp.debug": {
                    "type": "boolean",
                    "default": true,
                    "markdownDescription": "Enables debug information logging"
                },
                "c3.lsp.sendCrashReports": {
                    "type": "boolean",
                    "default": false,
                    "markdownDescription": "Sends crash reports to server to help fixing bugs."
                }
            }
        }
    },
    "main": "./src/extension.js",
    "dependencies": {
        "vscode-languageclient": "^9.0.1"
    }
}
